{
  "name": "@mhafemann/svelte-preprocess-prism",
  "version": "0.0.1",
  "description": "A svelte preprocessor that generates highlighted code with Prism.js.",
  "keywords": [
    "svelte",
    "prism",
    "preprocess"
  ],
  "author": {
    "name": "Mark Hafemann",
    "email": "markhafemann1@gmail.com"
  },
  "type": "module",
  "main": "dist/index.js",
  "module": "src/index.js",
  "exports": {
    ".": {
      "import": "./src/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json",
    "./types/*": "./types/*"
  },
  "types": "types/index.d.ts",
  "files": [
    "src",
    "dist",
    "types"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "types": "tsc",
    "prebuild": "rm -rf dist && mkdir dist",
    "build": "esbuild src/index.js --bundle --external:process --platform=node --target=node16 --outfile=dist/index.cjs",
    "postbuild": "agadoo src/index.js",
    "pretypes": "rm -rf types && mkdir types",
    "test": "uvu src \".\\.spec\\.js\"",
    "prepublishOnly": "npm run build && npm run types"
  },
  "devDependencies": {
    "@types/node": "^20.2.1",
    "@types/prismjs": "^1.26.0",
    "agadoo": "^3.0.0",
    "dotenv": "^16.0.3",
    "esbuild": "^0.17.19",
    "prettier": "^2.8.7",
    "prettier-plugin-jsdoc": "^0.4.2",
    "typescript": "^5.0.4",
    "uvu": "^0.5.6"
  },
  "docs": "src/*/**",
  "dependencies": {
    "magic-string": "^0.30.1",
    "prismjs": "^1.29.0",
    "svelte": "^4.0.5"
  }
}